<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %highlight([%-5p %d{yyyy-MM-dd HH:mm:ss.SSS} %50logger{50}] [threadId:%t] [userId:%X{userId}] : %message%n%xException)
            </pattern>
        </encoder>
    </appender>


    <logger level="ERROR" name="org.springframework"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>


</configuration>