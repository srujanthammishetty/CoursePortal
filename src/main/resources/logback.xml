<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                [%-5p %d{yyyy-MM-dd HH:mm:ss.SSS} %50logger{50}] [threadId:%t] [userId:%X{userId}] : %message%n%xException
            </pattern>
        </encoder>
    </appender>

    <appender name="FILE_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/request.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/request-%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>
               [%-5p %d{yyyy-MM-dd HH:mm:ss.SSS} %50logger{50}] [threadId:%t] [userId:%X{userId}] : %message%n%xException
            </pattern>
        </encoder>
    </appender>


    <logger level="ERROR" name="org.springframework"/>

    <root level="INFO">
        <appender-ref ref="FILE_APPENDER"/>
    </root>


</configuration>